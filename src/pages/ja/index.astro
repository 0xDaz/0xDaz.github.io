---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';
import { SITE_TITLE } from '../../consts';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations('en'); // Always use English for UI

// Get all posts from all languages, limit to 6
const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const posts = allPosts
	.filter(post => {
		if (lang === 'en') {
			// English posts have no language prefix (AI/, GameDev/, Env/)
			return !post.id.startsWith('en/') && !post.id.startsWith('ko/') && !post.id.startsWith('ja/') && !post.id.startsWith('zh/');
		}
		return post.id.startsWith(`${lang}/`);
	})
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 6);
---

<!doctype html>
<html lang={lang}>
	<head>
		<BaseHead title={SITE_TITLE} />
		<style>
			main {
				max-width: 1200px;
				width: 100%;
				padding: 3em 2em;
			}

			.hero {
				text-align: center;
				padding: 4em 0;
				margin-bottom: 4em;
			}

			.hero h1 {
				font-size: 3.5em;
				margin-bottom: 0.5em;
				line-height: 1.1;
				color: var(--text-primary);
			}

			.hero .subtitle {
				font-size: 1.4em;
				color: var(--text-secondary);
				margin-bottom: 1.5em;
			}

			.cta-button {
				display: inline-block;
				padding: 1em 2em;
				background: var(--accent-gradient);
				color: white;
				border-radius: 12px;
				font-weight: 600;
				text-decoration: none;
				transition: all 0.3s ease;
				box-shadow: 0 8px 24px rgba(139, 92, 246, 0.3);
			}

			.cta-button:hover {
				transform: translateY(-2px);
				box-shadow: 0 12px 32px rgba(139, 92, 246, 0.4);
			}

			.section-header {
				display: flex;
				justify-content: space-between;
				align-items: center;
				margin-bottom: 2em;
			}

			.section-title {
				font-size: 2em;
				margin: 0;
			}

			.section-link {
				color: var(--accent-secondary);
				text-decoration: none;
				font-weight: 600;
				transition: all 0.2s ease;
			}

			.section-link:hover {
				color: var(--accent-primary);
			}

			.posts-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
				gap: 2em;
				list-style: none;
				margin: 0;
				padding: 0;
			}

			.post-card {
				background: var(--bg-card);
				border: 1px solid var(--border-color);
				border-radius: 16px;
				overflow: hidden;
				transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
			}

			.post-card:hover {
				transform: translateY(-8px);
				border-color: var(--accent-primary);
				box-shadow: 0 0 32px var(--glow-primary);
			}

			.post-card a {
				text-decoration: none;
				color: inherit;
				display: block;
			}

			.post-content {
				padding: 1.5em;
			}

			.post-meta {
				display: flex;
				align-items: center;
				gap: 0.75em;
				margin-bottom: 1em;
			}

			.post-date {
				color: var(--text-muted);
				font-size: 0.875em;
				font-weight: 500;
			}

			.post-category {
				padding: 0.25em 0.75em;
				background: var(--accent-gradient);
				color: white;
				border-radius: 12px;
				font-size: 0.75em;
				font-weight: 600;
				text-transform: uppercase;
			}

			.post-title {
				margin: 0 0 0.5em 0;
				color: var(--text-primary);
				font-size: 1.25em;
				line-height: 1.4;
			}

			@media (max-width: 768px) {
				main {
					padding: 2em 1em;
				}

				.hero {
					padding: 2em 0;
				}

				.hero h1 {
					font-size: 2.5em;
				}

				.hero .subtitle {
					font-size: 1.2em;
				}

				.posts-grid {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<h1>0xDaz</h1>
				<p class="subtitle">
					üìç Seoul ‚Ä¢ üíº Programmer ‚Ä¢ üìß <a href="mailto:esnetni2@gmail.com">esnetni2@gmail.com</a>
				</p>
				<a href={getRelativeLocaleUrl(lang, '/blog')} class="cta-button">{t('nav.blog')}</a>
			</section>

			<section>
				<div class="section-header">
					<h2 class="section-title">{t('nav.blog')}</h2>
					<a href={getRelativeLocaleUrl(lang, '/blog')} class="section-link">{t('readMore')} ‚Üí</a>
				</div>
				<ul class="posts-grid">
					{
						posts.map((post) => {
							// Remove language prefix and convert to lowercase (e.g., 'ko/AI/post' -> 'ai/post')
							const pathWithoutLang = post.id.split('/').slice(1).join('/').toLowerCase();
							return (
							<li>
								<article class="post-card">
									<a href={`/ko/blog/${pathWithoutLang}/`}>
										<div class="post-content">
											<div class="post-meta">
												<span class="post-date">
													<FormattedDate date={post.data.pubDate} />
												</span>
												{post.data.categories && post.data.categories.length > 0 && (
													<span class="post-category">{post.data.categories[0]}</span>
												)}
											</div>
											<h3 class="post-title">{post.data.title}</h3>
										</div>
									</a>
								</article>
							</li>
						)})
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
