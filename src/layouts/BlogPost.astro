---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, tags, categories } = Astro.props;
---

<html lang="ko">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: 100%;
				max-width: 900px;
				margin: 0 auto;
				padding: 2em;
			}

			article {
				background: var(--bg-secondary);
				border: 1px solid var(--border-color);
				border-radius: 20px;
				overflow: visible;
			}

			.hero-image {
				width: 100%;
				max-height: 500px;
				overflow: hidden;
				background: var(--bg-tertiary);
			}

			.hero-image img {
				display: block;
				width: 100%;
				height: auto;
				object-fit: cover;
				border: none;
				border-radius: 0;
			}

			.article-header {
				padding: 3em 3em 1em;
				text-align: center;
			}

			.post-meta {
				display: flex;
				align-items: center;
				justify-content: center;
				gap: 1em;
				margin-bottom: 2em;
				flex-wrap: wrap;
			}

			.post-date {
				color: var(--text-secondary);
				font-size: 0.95em;
				font-weight: 500;
			}

			.post-category {
				padding: 0.4em 1em;
				background: var(--accent-gradient);
				color: white;
				border-radius: 12px;
				font-size: 0.85em;
				font-weight: 600;
				text-transform: uppercase;
				letter-spacing: 0.05em;
			}

			.article-header h1 {
				font-size: 2.5em;
				margin: 0 0 0.5em 0;
				line-height: 1.2;
			}

			.post-description {
				color: var(--text-secondary);
				font-size: 1.15em;
				line-height: 1.6;
				margin: 0 0 2em 0;
			}

			.post-tags {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5em;
				justify-content: center;
			}

			.post-tag {
				padding: 0.4em 1em;
				background: var(--bg-tertiary);
				color: var(--text-secondary);
				border: 1px solid var(--border-color);
				border-radius: 10px;
				font-size: 0.875em;
				font-weight: 500;
				transition: all 0.2s ease;
			}

			.post-tag:hover {
				border-color: var(--accent-secondary);
				color: var(--accent-secondary);
			}

			.divider {
				margin: 2em auto;
				max-width: 200px;
				height: 2px;
				background: var(--accent-gradient);
				border-radius: 2px;
			}

			.prose {
				max-width: 65ch;
				margin: 0 auto;
				padding: 2em 3em 3em;
				color: var(--text-primary);
				font-size: 1.1em;
				line-height: 1.7;
			}

			.prose :global(*) {
				max-width: 100%;
				overflow-wrap: break-word;
			}

			.prose :global(p) {
				margin-bottom: 1.25em;
			}

			.prose :global(h2) {
				margin-top: 2em;
				margin-bottom: 0.75em;
				padding-bottom: 0.4em;
				border-bottom: 2px solid var(--border-color);
				font-size: 1.6em;
			}

			.prose :global(h3) {
				margin-top: 1.75em;
				margin-bottom: 0.6em;
				color: var(--text-primary);
				font-size: 1.3em;
			}

			.prose :global(a) {
				color: var(--accent-secondary);
				font-weight: 500;
				text-decoration: underline;
				text-decoration-color: rgba(6, 182, 212, 0.3);
				text-underline-offset: 3px;
				transition: all 0.2s ease;
			}

			.prose :global(a:hover) {
				color: var(--accent-primary);
				text-decoration-color: var(--accent-primary);
			}

			.prose :global(img) {
				margin: 2em 0;
				box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
			}

			.prose :global(ul), .prose :global(ol) {
				padding-left: 1.75em;
				margin: 1.25em 0;
			}

			.prose :global(li) {
				margin: 0.4em 0;
				line-height: 1.6;
			}

			.prose :global(pre) {
				overflow-x: auto;
			}

			.prose :global(table) {
				display: block;
				overflow-x: auto;
				width: 100%;
			}

			.back-link {
				display: inline-flex;
				align-items: center;
				gap: 0.5em;
				margin-bottom: 2em;
				padding: 0.75em 1.25em;
				background: var(--bg-tertiary);
				color: var(--text-secondary);
				border: 1px solid var(--border-color);
				border-radius: 12px;
				text-decoration: none;
				font-weight: 600;
				transition: all 0.2s ease;
			}

			.back-link:hover {
				background: var(--bg-card);
				color: var(--accent-primary);
				border-color: var(--accent-primary);
				transform: translateX(-4px);
			}

			@media (max-width: 1024px) {
				main {
					max-width: 100%;
				}
			}

			@media (max-width: 768px) {
				main {
					padding: 1em;
				}

				.article-header {
					padding: 2em 1.5em 1em;
				}

				.article-header h1 {
					font-size: 1.8em;
				}

				.prose {
					padding: 1.5em;
					font-size: 1em;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<a href="/blog" class="back-link">
				‚Üê Back to Blog
			</a>
			<article>
				{heroImage && (
					<div class="hero-image">
						<Image width={1200} height={600} src={heroImage} alt="" />
					</div>
				)}
				<div class="article-header">
					<div class="post-meta">
						<span class="post-date">
							<FormattedDate date={pubDate} />
						</span>
						{categories && categories.length > 0 && (
							<span class="post-category">{categories[0]}</span>
						)}
					</div>
					<h1>{title}</h1>
					{description && <p class="post-description">{description}</p>}
					{tags && tags.length > 0 && (
						<div class="post-tags">
							{tags.map(tag => (
								<span class="post-tag">#{tag}</span>
							))}
						</div>
					)}
					<div class="divider"></div>
				</div>
				<div class="prose">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
