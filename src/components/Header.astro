---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import LanguagePicker from './LanguagePicker.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations('en'); // Always use English for UI
---

<header>
	<nav>
		<h2><a href={getRelativeLocaleUrl(lang, '/')}>{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href={getRelativeLocaleUrl(lang, '/')}>{t('nav.home')}</HeaderLink>
			<HeaderLink href={getRelativeLocaleUrl(lang, '/blog')}>{t('nav.blog')}</HeaderLink>
		</div>
		<div class="social-links">
			<!-- Language Picker -->
			<LanguagePicker />
			<!-- GitHub Link -->
			<a href="https://github.com/0xDaz" target="_blank" aria-label="GitHub">
				<svg viewBox="0 0 16 16" aria-hidden="true" width="24" height="24"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		position: sticky;
		top: 0;
		z-index: 100;
		margin: 0;
		padding: 0;
		background: rgba(10, 14, 26, 0.8);
		backdrop-filter: blur(12px);
		border-bottom: 1px solid var(--border-color);
		box-shadow: 0 4px 24px rgba(0, 0, 0, 0.3);
	}
	h2 {
		margin: 0;
		font-size: 1.4em;
		font-weight: 700;
		letter-spacing: -0.02em;
		line-height: 1.3;
	}

	h2 a {
		text-decoration: none;
		background: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		transition: all 0.3s ease;
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
		line-height: 1.3;
		font-weight: 700;
		display: inline-block;
		padding: 0.1em 0;
	}

	h2 a:hover {
		filter: brightness(1.2);
	}

	nav {
		display: grid;
		grid-template-columns: 1fr auto 1fr;
		align-items: center;
		max-width: 1200px;
		margin: 0 auto;
		padding: 1em 2em;
	}

	.internal-links {
		display: flex;
		gap: 0.5em;
		align-items: center;
		justify-content: center;
	}

	.internal-links :global(a) {
		padding: 0.5em 1em;
		color: var(--text-secondary);
		border-radius: 8px;
		text-decoration: none;
		transition: all 0.2s ease;
		font-weight: 500;
		line-height: 1;
	}

	.internal-links :global(a:hover) {
		color: var(--text-primary);
		background: var(--bg-tertiary);
	}

	.internal-links :global(a.active) {
		color: var(--accent-primary);
		background: rgba(139, 92, 246, 0.1);
	}

	.social-links {
		display: flex;
		gap: 0.75em;
		align-items: center;
		justify-self: end;
	}

	.social-links a {
		padding: 0.5em;
		color: var(--text-secondary);
		border-radius: 8px;
		transition: all 0.2s ease;
		display: flex;
		align-items: center;
		line-height: 1;
	}

	.social-links a:hover {
		color: var(--accent-primary);
		background: var(--bg-tertiary);
		transform: translateY(-2px);
	}

	.language-picker {
		display: flex;
		gap: 0.25em;
		padding: 0.25em;
		background: var(--bg-tertiary);
		border-radius: 8px;
	}

	.language-picker a {
		padding: 0.25em 0.5em;
		color: var(--text-secondary);
		text-decoration: none;
		font-size: 0.85em;
		font-weight: 600;
		border-radius: 4px;
		transition: all 0.2s ease;
	}

	.language-picker a:hover {
		color: var(--text-primary);
		background: var(--bg-secondary);
	}

	.language-picker a.active {
		color: var(--accent-primary);
		background: rgba(139, 92, 246, 0.1);
	}

	@media (max-width: 720px) {
		nav {
			padding: 1em;
		}
		.social-links {
			gap: 0.5em;
		}
		.internal-links {
			gap: 0;
		}
		nav a {
			padding: 0.5em;
			font-size: 0.9em;
		}
		.language-picker a {
			padding: 0.25em 0.4em;
			font-size: 0.8em;
		}
	}
</style>
